/* miniprogram/pages/ManagePage/ManagePage.wxss */
page{
  background-color: #f6f6f6;
}

.buttonview {
  margin-top : 40rpx;
  margin-bottom: 40rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.topbutton{
  background-color: transparent;
  font-size: 30rpx;
  width: 30%;
  color :  hsla(216, 93%, 47%, 0.733);
  font-weight: bold;
}

.appointmentbutton{
  background-color: hsla(216, 93%, 47%, 0.733);
  color: white;
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  margin-bottom: 5rpx;
  border-radius: 15rpx;
}

.inoverdueitem{
  background-color: white;
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border: 1rpx solid rgba(0, 0, 0, 0.3);
  border-left: none;
  border-top : none;
  border-right : none;
}

.labeltext{
  line-height: 100%;
  margin-left: 15rpx;
  font-size: 30rpx;
}

.cancelbutton{
  width: 150rpx;
  height: 50rpx;
  background-color: #e0f0e9;
  margin-right: 5%;
  font-size: 30rpx;
  line-height: 50rpx;
  vertical-align: middle;
  background-color: whitesmoke;
  border-radius: 0rpx;
}

.overduebutton{
  width: 100%;
  padding-left: 15rpx;
  font-size: 30rpx;
  text-align: left;
  height: 60rpx;
  border : 1rpx solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-top : none;
  border-right : none;
  border-radius: 0rpx;
  line-height: 60rpx;
}